<Window x:Class="XlsxToSQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XlsxToSQLite"
        mc:Ignorable="d"
        Title="Xlsx To SQLite" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--自定义标题栏 -->
            <Border Grid.Row="0" Background="#2196F3" Padding="20,10" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Xlsx To SQLite" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Name="MinimizeButton" 
                                Content="—" 
                                Width="44" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                FontSize="18" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="MinimizeButton_Click"
                                Margin="6,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="Transparent" 
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Name="CloseButton" 
                                Content="✕" 
                                Width="44" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                FontSize="18" 
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                Margin="6,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="Transparent" 
                                                        BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#f44336"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!--拖拽上传区域 -->
                <Border Grid.Row="0" 
                        Name="DropArea"
                        BorderBrush="#CCCCCC" 
                        BorderThickness="2" 
                        Background="#FAFAFA"
                        Padding="20"
                        Margin="0,0,0,20"
                        AllowDrop="True"
                        Drop="DropArea_Drop"
                        DragEnter="DropArea_DragEnter"
                        DragLeave="DropArea_DragLeave"
                        MouseLeftButtonDown="DropArea_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Width="128" 
                               Height="128" 
                               Margin="0,0,0,10" 
                               HorizontalAlignment="Center">
                            <Image.Source>
                                <BitmapImage UriSource="pack://application:,,,/XlsxToSQLite;component/Icons/App.ico"/>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="拖拽 XLSX/XLSM/XLTX/XLTM 文件到此处" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#666666" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="或点击选择文件" 
                                   FontSize="13" 
                                   Foreground="#999999" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!--文件信息显示区域 -->
                <Border Grid.Row="0" 
                        Name="FileInfoPanel" 
                        Background="#E3F2FD" 
                        Padding="20"
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                                    
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Name="FileNameText" 
                                       Text="文件名" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1976D2" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Name="FileSizeText" 
                                       Text="文件大小" 
                                       FontSize="13" 
                                       Foreground="#666666"/>
                            <TextBlock Name="StatusText" 
                                       Text="状态" 
                                       FontSize="12" 
                                       Foreground="#4CAF50"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                                    
                        <Border Grid.Column="1" 
                                Background="#BBDEFB" 
                                Padding="15" 
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                Width="120"
                                Height="80">
                            <StackPanel>
                                <TextBlock Text="已加载" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1976D2" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="✓" 
                                           FontSize="24" 
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Center"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                
                <!--输出设置区域 -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--输出格式 -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="输出格式：" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <ComboBox Name="FormatComboBox" 
                                  Width="Auto"
                                  HorizontalAlignment="Stretch"
                                  Height="35"
                                  VerticalContentAlignment="Center"
                                  SelectedIndex="0">
                            <ComboBoxItem>SQLite 数据库</ComboBoxItem>
                            <ComboBoxItem>JSONL 文件</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    
                    <!--输出目录 -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="输出目录：" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Name="OutputPathTextBox" 
                                     Grid.Column="0" 
                                     Height="35" 
                                     VerticalContentAlignment="Center"
                                     IsReadOnly="False"/>
                            <Button Name="BrowseButton" 
                                    Grid.Column="1" 
                                    Content="浏览..." 
                                    Width="80" 
                                    Height="35" 
                                    Margin="10,0,0,0"
                                    Click="BrowseButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!--按钮区域 -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--转换按钮 -->
                    <Button Grid.Column="0" 
                            Name="ConvertButton" 
                            Content="转换" 
                            Height="45" 
                            FontSize="15" 
                            FontWeight="SemiBold"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ConvertButton_Click"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45a049"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!--清空按钮 -->
                    <Button Grid.Column="2" 
                            Name="ClearButton" 
                            Content="清空" 
                            Height="45" 
                            FontSize="15" 
                            FontWeight="SemiBold"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ClearButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>